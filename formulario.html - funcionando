    <script>
        // Efeito sutil de entrada para o formulário
        document.addEventListener('DOMContentLoaded', function() {
            const formContainer = document.querySelector('.form-container');
            const contactInfo = document.querySelector('.contact-info');
            
            formContainer.style.opacity = '0';
            formContainer.style.transform = 'translateY(30px)';
            contactInfo.style.opacity = '0';
            contactInfo.style.transform = 'translateY(30px)';
            
            setTimeout(() => {
                formContainer.style.transition = 'all 0.6s ease';
                formContainer.style.opacity = '1';
                formContainer.style.transform = 'translateY(0)';
                
                contactInfo.style.transition = 'all 0.6s ease 0.2s';
                contactInfo.style.opacity = '1';
                contactInfo.style.transform = 'translateY(0)';
            }, 200);
            
            // Contador de caracteres
            function setupCharacterCounter(inputId, countId, maxLength) {
                const input = document.getElementById(inputId);
                const count = document.getElementById(countId);
                
                input.addEventListener('input', function() {
                    const currentLength = this.value.length;
                    count.textContent = `${currentLength}/${maxLength} caracteres`;
                    
                    if (currentLength > maxLength * 0.8) {
                        count.classList.add('warning');
                    } else {
                        count.classList.remove('warning');
                    }
                    
                    // Limitar o texto se exceder o máximo
                    if (currentLength > maxLength) {
                        this.value = this.value.substring(0, maxLength);
                        count.textContent = `${maxLength}/${maxLength} caracteres`;
                        count.classList.add('warning');
                    }
                });
                
                // Inicializar contador
                count.textContent = `0/${maxLength} caracteres`;
            }
            
            // Configurar contadores para cada campo
            setupCharacterCounter('nome', 'nome-count', 100);        // Nome: 100 caracteres
            setupCharacterCounter('telefone', 'telefone-count', 25); // Telefone: 25 caracteres
            setupCharacterCounter('email', 'email-count', 150);      // E-mail: 150 caracteres
            setupCharacterCounter('empresa', 'empresa-count', 100);  // Empresa: 100 caracteres
            setupCharacterCounter('assunto', 'assunto-count', 200);  // Assunto: 200 caracteres
            setupCharacterCounter('mensagem', 'mensagem-count', 1000); // Mensagem: 1000 caracteres
            
            // Validação do formulário - CORRIGIDO!
            document.getElementById('contactForm').addEventListener('submit', function(e) {
                
                // Verificar limites de caracteres ANTES de enviar
                const nome = document.getElementById('nome').value;
                const assunto = document.getElementById('assunto').value;
                const mensagem = document.getElementById('mensagem').value;
                
                if (nome.length > 100) {
                    alert('O nome deve ter no máximo 100 caracteres.');
                    e.preventDefault();
                    return;
                }
                
                if (assunto.length > 200) {
                    alert('O assunto deve ter no máximo 200 caracteres.');
                    e.preventDefault();
                    return;
                }
                
                if (mensagem.length > 1000) {
                    alert('A mensagem deve ter no máximo 1000 caracteres.');
                    e.preventDefault();
                    return;
                }
                
                // Se passou na validação, permite o envio para o PHP
                // O PHP fará o trabalho de salvar no banco
                
                // Feedback visual durante o envio
                const btn = document.querySelector('.btn-primary');
                const originalText = btn.innerHTML;
                
                btn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Enviando...';
                btn.disabled = true;
                
                // O formulário será enviado normalmente para processar_contato.php
                // Não precisa fazer nada mais - o PHP vai processar e redirecionar
            });
        });
    </script>
